{
  "name": "ministryofjustice/hillsborough",
  "type": "project",
  "description": "The Hillsborough Inquests website.",
  "homepage": "https://github.com/ministryofjustice/hillsborough",
  "authors": [
    {
      "name": "Ollie Treend",
      "email": "ollie@treend.com",
      "homepage": "https://github.com/ollietreend"
    }
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "git",
      "url": "https://github.com/ministryofjustice/wp-rewrite-media-to-s3"
    },
    {
      "type": "git",
      "url": "https://github.com/ministryofjustice/pp-security-composer"
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.6.*",
    "oscarotero/env": "^1.0",
    "wpackagist-plugin/disable-wordpress-updates": "*",
    "ministryofjustice/wp-rewrite-media-to-s3": "0.1.*",
    "ministryofjustice/pp-security": "*",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "*",
    "wpackagist-plugin/google-xml-sitemaps-v3-for-qtranslate": "*",
    "wpackagist-plugin/sitemap": "*"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin", "wpackagist-plugin/disable-wordpress-updates"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}